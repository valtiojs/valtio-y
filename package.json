{
  "name": "valtio-y-monorepo",
  "version": "1.0.0",
  "description": "valtio-y monorepo",
  "workspaces": [
    "valtio-y",
    "examples/*"
  ],
  "scripts": {
    "prepare": "husky",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "lint": "oxlint --type-aware .",
    "lint:fix": "oxlint --type-aware --fix .",
    "format": "bun oxfmt .",
    "check": "bun run format && bun run lint:fix",
    "version": "changeset version && bun update",
    "release": "turbo run publish --filter='valtio-*' && changeset tag"
  },
  "private": true,
  "keywords": [],
  "author": "Daishi Kato",
  "license": "ISC",
  "packageManager": "bun@1.3.1",
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/node": "^24.10.0",
    "husky": "^9.1.7",
    "oxfmt": "^0.9.0",
    "oxlint": "^1.26.0",
    "oxlint-tsgolint": "^0.5.0",
    "turbo": "^2.6.0"
  }
}